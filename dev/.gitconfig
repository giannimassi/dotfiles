# This is Git's per-user configuration file.
[user]
	name = Gianni Massi
	email = me@giannimassi.it

[includeIf "gitdir:~/develop/develer/**"]
    	path = ~/.work-gitconfig

[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

[push]
  default = simple

[rebase]
	autosquash = true

[core]
    excludesfile = /Users/gmassi/.gitignore

[status]
	relativePaths = true

[alias]
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
	cb = checkout-branch
	gofmt = !echo $(git diff --cached --name-only --diff-filter=ACM | grep .go) | xargs gofmt -w -l | xargs git add
	dag = cola dag
	amend = commit --amend

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	commit      = green
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace  = "red reverse"
[color "status"]
  header    = white dim
  branch    = yellow bold
  added     = green bold
  changed   = red bold
  untracked = cyan
[gui]
  fontui = -family \"Consolas\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Consolas\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	spellingdictionary = en

[cola]
    spellcheck = false

[filter "lfs"]
  required = true
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  clean = git-lfs clean -- %f

[url "git@github.com:"]
	insteadOf = https://github.com/
